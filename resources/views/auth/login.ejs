<section class="login flex justify-center pt-24">
    <div class="wrapper w-full max-w-xs">
        <form method="POST" action="/login" class="bg-emerald-900 backdrop-blur-md bg-opacity-20 shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
          <h1 class="text-3xl text-center font-bold text-transparent bg-clip-text bg-gradient-to-br from-cyan-400 to-lime-500 mb-4">Log In</h1>
          <% if (messages.error) { %>  <!--messages is object generated by flash()-->
            <span class="text-red-500 text-sm"> <%= messages.error %></span>
          <% } %>
          <% if (messages.success) { %>  <!--messages is object generated by flash()-->
            <span class="text-green-500 text-sm"> <%= messages.success %></span>
          <% } %>

          <div class="mb-4">
            <label class="block text-white text-sm mb-2" for="Email">
              E-mail
            </label>
            <input name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="Email" type="Email" placeholder="Enter your E-mail">
          </div>
          <div class="mb-6">
            <label class="block text-white text-sm mb-2" for="password">
              Password
            </label>
            <input name="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
          </div>
          <div class="flex items-center justify-between">
            <button class="btn-primary text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" type="submit">
              Log In
            </button>
            <a class="inline-block align-baseline font-bold text-sm" href="/forgotPassForm">Forgot Password?</a>
          </div>
          <div class="flex justify-center mt-4">
            <a class="inline-block align-baseline font-bold text-sm" href="/register">
              Don't have an account?
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;2022 Kabir Food Corner All rights reserved.
        </p>
      </div>      
</section>