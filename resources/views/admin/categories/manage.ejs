<section class="manage-panel flex justify-center">
    <div class="w-full max-w-xl py-24">

        <%if(!messages.catName){%>
            <form action="/admin/categories/add" method="POST" class="rounded-lg px-4 py-4" enctype="multipart/form-data">
                <div class="mb-4">
                    <h1 class="text-2xl text-center">Add new category</h1>
                </div>
        <%}else{%>
            <form action="/admin/categories/update" method="POST" class="rounded-lg px-4 py-4" enctype="multipart/form-data">
                <div class="mb-4">
                    <h1 class="text-2xl text-center">Update category</h1>
                </div>
            <%}%>
            <div class="mb-4">
                <span class="text-red-500 text-sm">
                    <%if(messages.error){%>
                        <%=messages.error%>
                    <%} else {%>
                        <%=messages.success%>
                    <%}%>
                </span>
            </div>

            <div class="mb-4">
                <label class="block text-white text-sm mb-2" for="catName">
                    Name:
                </label>
                <input name="catName" value="<%=messages.catName%>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="catName" type="text" placeholder="Enter your category name">    
            </div>
            <input name="catID" value="<%=messages.catID%>" type="hidden">
            <input name="catImage" value="<%=messages.catImage%>" type="hidden">
            <div class="mb-4">
                <label class="block text-white text-sm mb-2" for="description">
                    Description:
                </label>
                <textarea name="description" id="description" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Description..."><%=messages.description%></textarea>
            </div>
            
            <div class="mb-4">
                <label class="block text-white text-sm mb-2" for="formFile">
                    Image:
                </label>
                <input name="catImage" class="form-control block w-full px-2 py-1 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" type="file" id="formFile">
            </div>
            
            <div class="flex justify-end">
                <button type="submit" class="btn-primary rounded-full px-4 py-1"><%=messages.catName ? 'Update' : 'Add'%></button>
            </div>
        </form>
    </div>
</section>